{
  "name": "@lotus-gui/core",
  "version": "0.1.1",
  "main": "lotus.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1Jamie/project-lotus.git"
  },
  "files": [
    "README.md",
    "lotus.js",
    "index.js",
    "index.d.ts",
    "package.json",
    "*.node",
    "resources/",
    "scripts/"
  ],
  "napi": {
    "name": "lotus",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-gnu",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "clean": "napi clean",
    "artifacts": "echo 'Artifacts moved by CI workflow'",
    "test": "npm run test:base",
    "test:base": "GLIBC_TUNABLES=glibc.rtld.optional_static_tls=4096 node example.js",
    "postinstall": "node scripts/install.js",
    "start": "RUST_LOG=info LOTUS_DEV_REQ=../ node test_app/main.js",
    "test-app": "RUST_LOG=debug LOTUS_DEV_REQ=../ node test_app/main.js"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.16.0"
  },
  "dependencies": {
    "msgpackr": "^1.11.8"
  }
}